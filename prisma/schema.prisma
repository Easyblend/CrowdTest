generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String?
  email    String @unique
  password String
  projects Project[]
  role     Role   @default(DEV)
}

enum Role {
  DEV
  TESTER
  ADMIN
}

model Bug {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  severity    String
  screenshot  String?
  projectId   Int
  project     Project    @relation(fields: [projectId], references: [id])
  createdAt   DateTime   @default(now())
}

model Project {
  id          Int       @id @default(autoincrement())
  name        String
  url         String
  description String?
  createdBy   Int
  user        User      @relation(fields: [createdBy], references: [id])
  bugs        Bug[]
  createdAt   DateTime  @default(now())
}